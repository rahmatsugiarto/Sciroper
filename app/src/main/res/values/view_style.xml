<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btn_style">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="elevation">4dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_toggle</item>
    </style>

    <style name="text_pemain_com">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/madeeta</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        android:textColor="?textColour"
    </style>

    <style name="landing_image">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">@id/guideline</item>
    </style>

    <style name="landing_menu_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/madeeta</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?textColour</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="image_style">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="style_crown">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="style_rank">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="AvatarRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/avatar_selector</item>
    </style>

    <style name="Font_Madeeta" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:fontFamily">@font/madeeta</item>

    </style>

</resources>