<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingActivityView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?backgroundColour"
    android:padding="12dp"
    tools:context=".ui.setting.SettingActivity">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/backBtnFromSetting"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:background="?selectableItemBackgroundBorderless"
        android:scaleType="fitXY"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:fontFamily="@font/madeeta"
        android:textColor="?textColour"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backBtnFromSetting" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFromSettingToProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_button_profile_background"
        android:layout_marginTop="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Profile"
        android:textAllCaps="false"
        android:fontFamily="@font/madeeta"
        android:textColor="?textColour"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_marginTop="24dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/btnFromSettingToProfile"
        app:layout_constraintStart_toStartOf="@+id/btnFromSettingToProfile"
        app:layout_constraintTop_toBottomOf="@+id/btnFromSettingToProfile">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dark Mode"
            android:fontFamily="@font/madeeta"
            android:textAlignment="viewStart"
            android:layout_weight="1"
            android:textColor="?textColour"
            android:textSize="24sp"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchDarkMode"
            android:layout_width="48dp"
            android:layout_height="36dp"
            app:track="@drawable/switch_dark_mode_track"
            android:thumb="@drawable/switch_dark_mode_rhumb"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>