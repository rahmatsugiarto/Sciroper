<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.binar.sciroper">

    <application
        android:name=".util.App"
        android:allowBackup="true"
        android:icon="@drawable/sciroper_louncher"
        android:label="@string/app_name"
        android:protectionLevel="signature"
        android:roundIcon="@drawable/sciroper_louncher"
        android:supportsRtl="true"
        android:theme="@style/Theme.RPSChallengeChapter4"
        tools:ignore="AllowBackup">
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:windowSoftInputMode="adjustNothing"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".ui.playervsplayer.PlayerActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.landing.LandingPageActivity"
            android:exported="false"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".ui.menugameplay.MenuGamePlayActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

        <activity
            android:name=".ui.setting.SettingActivity"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".ui.how_to_play.HowToPlay"
            android:screenOrientation="portrait"
            android:exported="true" />

        <activity
            android:name=".ui.leaderboard.LeaderBoardActivity"
            android:screenOrientation="portrait"
            android:exported="true" />

        <activity
            android:name=".ui.register_confirmation.RegisterConfirmationActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.menu.MenuActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.signup.SignUpActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".ui.login.LogInActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            />

        <activity
            android:name=".ui.splash.SplashScreen"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.playgame.CPUActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
    </application>

</manifest>